<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Location</th>
      <th>Full time</th>
      <th>Active</th>
      <th>Contact</th>
      <th>Description</th>
      <th>Requirements</th>
      <th>Salary</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company %></td>
        <td><%= job.location %></td>
        <td><%= job.full_time %></td>
        <td><%= job.active %></td>
        <td><%= job.contact %></td>
        <td><%= job.description %></td>
        <td><%= job.requirements %></td>
        <td><%= job.salary %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

